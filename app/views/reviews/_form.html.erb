<!-- this is a new form for @review added in controller. The text between the |[name of variable]| characters are the new variable in view folder  -->
<%= simple_form_for @review do |f| %>
  <%= f.input :title %>
  <%= f.input :restaurant %>
  <%= f.input :address %>
  <%= f.input :body %>
  <%= f.input :cuisine %>
  <%= f.input :ambiance %>
  <%= f.input :score %>
  <%= f.radio_button :price, "Cheap" %> Cheap<br />
  <%= f.radio_button :price, "Reasonable" %> Reasonable<br />
  <%= f.radio_button :price, "Pricey" %> Pricey<br />

  <%= f.button :submit %>
<% end %>
